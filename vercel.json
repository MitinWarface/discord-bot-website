{
  "version": 2,
  "name": "discord-bot-dashboard",
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**/*"],
        "nodeVersion": "18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/commands",
      "dest": "api/server.js"
    },
    {
      "src": "/info",
      "dest": "api/server.js"
    },
    {
      "src": "/servers",
      "dest": "api/server.js"
    },
    {
      "src": "/server/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/server.js"
    }
 ]
}