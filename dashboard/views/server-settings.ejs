    <script>
        document.getElementById('settingsForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // –°–æ–±–∏—Ä–∞–µ–º –¥–∞–Ω–Ω—ã–µ —Ñ–æ—Ä–º—ã –≤ –æ–±—ä–µ–∫—Ç
            const formElements = this.querySelectorAll('input, select, textarea');
            const settings = {};
            
            formElements.forEach(element => {
                if (element.type === 'checkbox') {
                    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —á–µ–∫–±–æ–∫—Å–æ–≤
                    const name = element.name;
                    if (name.includes('[')) {
                        const keys = name.replace(/]/g, '').split('[');
                        let current = settings;
                        
                        for (let i = 0; i < keys.length - 1; i++) {
                            if (!current[keys[i]]) {
                                current[keys[i]] = {};
                            }
                            current = current[keys[i]];
                        }
                        
                        current[keys[keys.length - 1]] = element.checked;
                    } else {
                        settings[name] = element.checked;
                    }
                } else {
                    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—Å—Ç–∞–ª—å–Ω—ã—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤ (—Ç–µ–∫—Å—Ç, —á–∏—Å–ª–∞ –∏ —Ç.–¥.)
                    const name = element.name;
                    if (name.includes('[')) {
                        const keys = name.replace(/]/g, '').split('[');
                        let current = settings;
                        
                        for (let i = 0; i < keys.length - 1; i++) {
                            if (!current[keys[i]]) {
                                current[keys[i]] = {};
                            }
                            current = current[keys[i]];
                        }
                        
                        // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º —á–∏—Å–ª–æ–≤—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è
                        if (element.type === 'number') {
                            current[keys[keys.length - 1]] = parseFloat(element.value) || element.value;
                        } else {
                            current[keys[keys.length - 1]] = element.value;
                        }
                    } else {
                        // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º —á–∏—Å–ª–æ–≤—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è
                        if (element.type === 'number') {
